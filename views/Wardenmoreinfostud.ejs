<% include ./partial/header %>

<div class="col-sm-9" style="margin: 50px auto; text-align: center; border: 1px solid purple;">
  <form action="/warden/<%= warden.id %>/leave/<%= student.id %>/info" method="POST">
    <div class="container-fluid bg-3 text-center" style="border: 1px solid blue;">
      <h1><%= student.name %></h1>
      <br />
      <div class="row">
        <div class="col-sm-4">
          <img style="border-radius: 100%;" src="<%= student.image %>" alt="image" />
        </div>
        <% student.leaves.forEach(function(leave) { %>
        <div class="col-sm-4">
          <h3><strong>Subject:</strong> <%= leave.subject %></h3>
          <h3>Status: <%= leave.wardenstatus %></h3>
          <h3>From: <%= moment(leave.from).format('DD/MM/YYYY') %></h3>
          <h3>To: <%= moment(leave.to).format('DD/MM/YYYY') %></h3>
          <h3>Days: <%= leave.days %></h3>
          <h3>Hostel: <%= student.hostel %></h3>
          <h3>Department: <%= student.department %></h3>
          <div style="display: flex; gap: 10px; justify-content: center;">
            <input type="submit" class="btn btn-success" name="action" value="Approve" />
            <input type="submit" class="btn btn-danger" name="action" value="Decline" />
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </form>
</div>

<% include ./partial/footer %>
