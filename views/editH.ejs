<% include ./partial/header %>
<div class="container" style="position: relative; border-radius: 5px; background-color: #f2f2f2; padding: 20px 0 30px 0; width: 40%; margin: 0 auto;">
  <form action="/hod/<%= hod._id %>?_method=PUT" method="POST">
    <div class="row">
      <div class="col">
        <h1 style="text-align:center;">Edit Profile: <%= hod.name %></h1>

        <div class="form-group form-inline">
          <label for="name" style="width: 200px; display: inline-block; text-align: right;">Name</label>
          <input class="form-control" type="text" id="name" value="<%= hod.name %>" name="hod[name]" />
        </div>

        <div class="form-group form-inline">
          <label for="username" style="width: 200px; display: inline-block; text-align: right;">Username</label>
          <input class="form-control" type="text" id="username" value="<%= hod.username %>" name="hod[username]" />
        </div>

        <div class="form-group form-inline">
          <label for="department" style="width: 200px; display: inline-block; text-align: right;">Department</label>
          <input class="form-control" type="text" id="department" value="<%= hod.department %>" name="hod[department]" />
        </div>

        <div class="form-group form-inline">
          <label for="url" style="width: 200px; display: inline-block; text-align: right;">Image URL</label>
          <input class="form-control" type="text" id="url" value="<%= hod.image %>" name="hod[image]" />
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </div>
    </div>
  </form>

  <a href="/hod/profile" style="display: block; margin-top: 20px; text-align: center; text-decoration: none;">Back</a>
</div>

<% include ./partial/footer %>
