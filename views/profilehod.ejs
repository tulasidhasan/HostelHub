<% include ./partial/header %>
<% include ./partial/hodfunction %>

<div class="col-sm-6" style="flex: 0 0 50%; max-width: 50%; margin: 0 auto; text-align: center;">
  <div class="thumbnail">
    <img style="height: 150px; width: 150px; border-radius: 50%;" src="<%= hod.image %>" alt="HOD Image"/>
    <h1><strong>Name:</strong> <%= hod.name %></h1>
    <h4><strong>Type:</strong> <%= hod.type %></h4>
    <h4>Username: <%= hod.username %></h4>
    <h4>Department: <%= hod.department %></h4>
  </div>
  <a class="btn btn-warning" href="/hod/<%= hod._id %>/edit">Edit</a>
</div>

<% include ./partial/footer %>
