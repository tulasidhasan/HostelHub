<script>
  $(document).ready(function() {
    $('[data-toggle="tooltip"]').tooltip();
  });
</script>

<h1 style="margin-top: 61px; font-size: 20px;">Welcome, <%= hod.name %></h1>

<div class="container">
  <div class="row" style="margin-left: 0; padding-left: 15px;">
    <div class="col-sm-3" style="list-style-type: none;">
      <ul style="padding: 0;">
        <li>
          <a
            href="/hod/home"
            data-toggle="tooltip"
            title="home page"
            data-placement="left"
            class="btn btn-info btn-lg"
            style="width: 210px; margin-top: 10px;"
          >Home</a>
        </li>
        <li>
          <a
            href="/hod/<%= hod._id %>"
            data-toggle="tooltip"
            title="Click to see your profile"
            data-placement="left"
            class="btn btn-info btn-lg"
            style="width: 210px; margin-top: 10px;"
          >Profile</a>
        </li>
        <li>
          <a
            href="/hod/<%= hod._id %>/leave"
            class="btn btn-info btn-lg"
            style="width: 210px; margin-top: 10px;"
          >Leave</a>
        </li>
      </ul>
    </div>
  </div>
</div>
