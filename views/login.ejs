<% include ./partial/header %>

<div
  class="container"
  style="position: relative; border-radius: 5px; background-color: #f2f2f2; padding: 20px 0 30px 0; width: 30%; margin: 150px auto;"
>
  <form action="/student/login" method="POST">
    <div class="row">
      <div class="col">
        <h2 style="text-align: center;">Login</h2>

        <!-- Username Input -->
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="Username"
            required
          />
        </div>

        <!-- Password Input -->
        <div class="form-group">
          <input
            class="form-control"
            type="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>

        <!-- Login Button -->
        <div class="form-group">
          <button
            type="submit"
            class="btn btn-lg btn-rounded btn-primary btn-block"
          >
            Login
          </button>
        </div>
      </div>
    </div>
  </form>

  <!-- Go Back Link -->
  <a
    style="
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 4px;
      margin: 5px 0;
      opacity: 0.85;
      display: inline-block;
      font-size: 17px;
      line-height: 20px;
      text-decoration: none;
    "
    href="/"
    >Go Back</a
  >
</div>

<% include ./partial/footer %>
