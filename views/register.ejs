<% include ./partial/header %>

<div class="lop" style="border: 1px solid pink;">
  <% if (locals.errors) { %>
    <div class="alert alert-danger" role="alert">
      <% locals.errors.forEach(function(error) { %>
        <h5><%= error.msg %></h5>
      <% }); %>
    </div>
  <% } %>
</div>

<div class="container" style="position: relative; border-radius: 5px; background-color: #f2f2f2; padding: 60px 0 30px 0; width: 40%; margin: 0 auto;">
  <form action="/student/register" method="POST" style="margin: 0 auto;">
    <div class="row">
      <div class="col">
        <h2 style="text-align: center;">Register</h2>

        <!-- Name -->
        <div class="form-group form-inline">
          <label for="name" style="width: 200px; display: inline-block; text-align: right;">Name</label>
          <input class="form-control" type="text" id="name" placeholder="Name" name="name" style="float: left; text-align: left;" />
        </div>

        <!-- User Type -->
        <div class="form-group" style="width: 400px; display: inline-block; text-align: right;">
          <input type="radio" id="r1" name="type" value="student" /> Student
          <input type="radio" id="r2" name="type" value="hod" /> HOD
          <input type="radio" id="r3" name="type" value="warden" /> Warden
        </div>

        <!-- Username -->
        <div class="form-group form-inline">
          <label for="username" style="width: 200px; display: inline-block; text-align: right;">Username</label>
          <input class="form-control" type="text" id="username" placeholder="Username" name="username" />
        </div>

        <!-- Password -->
        <div class="form-group form-inline">
          <label for="password" style="width: 200px; display: inline-block; text-align: right;">Password</label>
          <input class="form-control" type="password" name="password" id="password" placeholder="Password" />
        </div>

        <!-- Confirm Password -->
        <div class="form-group form-inline">
          <label for="cpassword" style="width: 200px; display: inline-block; text-align: right;">Confirm Password</label>
          <input class="form-control" type="password" id="cpassword" name="password2" placeholder="Confirm Password" />
        </div>

        <!-- Department -->
        <div class="form-group form-inline">
          <label for="department" style="width: 200px; display: inline-block; text-align: right;">Department</label>
          <input class="form-control" type="text" placeholder="Department" id="department" name="department" />
        </div>

        <!-- Hostel -->
        <div class="form-group form-inline">
          <label for="hostel" style="width: 200px; display: inline-block; text-align: right;">Hostel</label>
          <input class="form-control" type="text" name="hostel" id="hostel" placeholder="Hostel" />
        </div>

        <!-- Image URL -->
        <div class="form-group form-inline">
          <label for="img" style="width: 200px; display: inline-block; text-align: right;">Image URL</label>
          <input class="form-control" type="text" id="img" placeholder="Image URL" name="image" />
        </div>

        <!-- Submit Button -->
        <div class="form-group">
          <button type="submit" class="btn btn-lg btn-primary btn-default btn-block" style="color: #fff;">
            Submit
          </button>
        </div>

      </div>
    </div>
  </form>

  <a href="/" style="display: block; text-align: center; margin-top: 20px;">Back</a>
</div>

<% include ./partial/footer %>
