<% include ./partial/header %> 
<% include ./partial/studfunction %>

<div class="col-sm-6" style="flex: 0 0 50%; max-width: 50%; margin-left: auto; margin-right: auto; margin-top: 50px; text-align: center; border: 1px solid pink; padding: 20px; border-radius: 10px;">
  <div class="thumbnail" style="text-align: center;">
    <!-- Profile Image -->
    <img style="height: 150px; width: 150px; border-radius: 100%; margin-bottom: 20px;" src="<%= student.image %>" alt="Student Image" />
    
    <!-- Profile Information -->
    <h1><strong>Name:</strong> <%= student.name %></h1>
    <h4><strong>Type:</strong> <%= student.type %></h4>
    <h4><strong>Username:</strong> <%= student.username %></h4>
    <h4><strong>Department:</strong> <%= student.department %></h4>
    <h4><strong>Hostel:</strong> <%= student.hostel %></h4>
  </div>

  <!-- Edit Button -->
  <a class="btn btn-warning" href="/student/<%= student._id %>/edit" style="margin-top: 20px; padding: 10px 20px;">
    Edit
  </a>
</div>

<% include ./partial/footer %>
