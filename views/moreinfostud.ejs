<% include ./partial/header %>
<% include ./partial/hodfunction %>

<div class="col-sm-6" style="flex: 0 0 50%; max-width: 60%; margin-left: auto; margin-right: auto; margin-top: 50px; text-align: center;">
  <form action="/hod/<%= hod.id %>/leave/<%= student.id %>/info" method="POST">
    <div class="container-fluid bg-3 text-center">
      <h1 style="margin-top: 40px;"><%= student.name %></h1>
      <br />
      <div class="row">
        <div class="col-sm-4" style="text-align: center;">
          <img style="height:150px;width:150px;border-radius: 100%;" src="<%= student.image %>" alt="Student Image" />
        </div>

        <% student.leaves.forEach(function(leave){ %>
        <div class="col-sm-4" style="margin-top: 20px;">
          <h3><strong>Subject:</strong> <%= leave.subject %></h3>
          <h3><strong>Status:</strong> <%= leave.status %></h3>
          <h3><strong>From:</strong> <%= moment(leave.from).format('DD/MM/YYYY') %></h3>
          <h3><strong>To:</strong> <%= moment(leave.to).format('DD/MM/YYYY') %></h3>
          <h3><strong>Days:</strong> <%= leave.days %></h3>
          <h3><strong>Department:</strong> <%= student.department %></h3>

          <div class="col-sm-6" style="margin-top: 20px;">
            <input type="submit" class="btn btn-block btn-success" name="action" value="Approve" />
            <input type="submit" class="btn btn-block btn-danger" name="action" value="Deny" />
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </form>
</div>

<% include ./partial/footer %>
